<div class="container mt-5">
  <h2 class="text-dark mb-4">Profil Bilgilerini Güncelle</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-3">
      <%= f.label :email,"E-Posta" ,class: "form-label" %>
      <%= f.text_field :email,readonly: true, class: "form-control" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="alert alert-info">
        Şu anda onay bekleyen e-posta: <%= resource.unconfirmed_email %>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.label :password,"Şifre" ,class: "form-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      <% if @minimum_password_length %>
        <div class="form-text">
          En az <%= @minimum_password_length %> karakter.
        </div>
      <% end %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation,"Şifre Tekrarı", class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :current_password, class: "form-label" %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      <div class="form-text">Değişiklikleri kaydetmek için mevcut şifrenizi girin.</div>
    </div>

    <div class="d-grid mb-4">
      <%= f.submit "Güncelle", class: "btn btn-outline-success" %>
    </div>
  <% end %>

  <div class=" mb-4">
    <%= button_to "Hesabımı Sil", registration_path(resource_name), method: :delete, data: { turbo: false }, class: "btn btn-outline-danger mt-2", id: "delete-account-button" %>
  </div>


<script>
  document.addEventListener("DOMContentLoaded", function () {
    const deleteButton = document.getElementById("delete-account-button");
    deleteButton.addEventListener("click", function (event) {
      if (!confirm("Hesabınızı silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.")) {
        event.preventDefault();
      }
    });
  });
</script>
