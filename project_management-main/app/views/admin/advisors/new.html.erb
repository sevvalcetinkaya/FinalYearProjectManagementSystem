<h2>Yeni Danışman Ekle</h2>

<%= form_with model: @advisor, url: admin_advisors_path, local: true do |f| %>
  <div class="form-group">
    <%= f.label :first_name, "Ad" %>
    <%= f.text_field :first_name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :last_name, "Soyad" %>
    <%= f.text_field :last_name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :email, "E-posta" %>
    <%= f.email_field :email, class: "form-control", required: true %>
  </div>

  <%= f.submit "Danışman Ekle", class: "btn btn-outline-success mt-3" %>
<% end %>


<hr class="my-5">

<h2>Mevcut Danışmanlar</h2>

<% if @advisors.any? %>
  <div class="table-responsive mt-3">
    <table class="table table-bordered table-hover align-middle">
      <thead class="table-light">
        <tr>
          <th>Ad Soyad</th>
          <th>E-posta</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @advisors.each do |advisor| %>
          <tr>
            <td><%= advisor.full_name %></td>
            <td><%= advisor.email %></td>
            <td>
              <%= button_to "Sil", admin_advisor_path(advisor), method: :delete, data: { confirm: "Danışmanı ve bağlı tüm gruplar ile projeleri silmek istediğinize emin misiniz?" }, class: "btn btn-outline-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="alert alert-info mt-3">
    Henüz sistemde kayıtlı danışman bulunmamaktadır.
  </div>
<% end %>
